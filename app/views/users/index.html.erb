<% provide(:title, 'All users') %>
<h1>All users</h1>
<% if @users.any? %>
<% @users.each do |user| %>
<ul>
  <li><%= link_to user.name, user %> | 
  <% if current_user.admin? && !current_user?(user) %>
  <%= link_to "delete", user, method: :delete, data: {confirm: "Sure?"} %> 
  <% end %>
</li>
     
</ul>
<% end %>
<% end %>