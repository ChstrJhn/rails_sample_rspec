<% provide(:title, @user.name) %>
<%= @user.name %>, <%= @user.email %>
<% if current_user?(@user) %>
<%= link_to 'Sign out', signout_path %>
<% end %>

<% if @microposts.any? %>
<h5>Microposts (<%= @microposts.count %>) </h5>
  <ul>
  	<% @microposts.each do |micropost| %>
    <li><%= micropost.content %><br>
    	posted <%= time_ago_in_words(micropost.created_at)%> ago. | 
       <% if current_user?(@user) %>
       <%= link_to "delete", micropost, method: :delete, data: {confirm: "sure?"}, title: micropost.content %>
       <% end %>

    </li>
    <% end %>
  </ul>
<% end %>